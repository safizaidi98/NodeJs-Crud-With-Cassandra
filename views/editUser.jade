extends layout
block content
    h1 Edit User
    form#formEditUser(name = 'edituser', method= 'post', action ='/editUser')
        div
            input#inputUserName(type = 'text', placeholder = 'Enter User Name', name = 'username', value = '#{username}') 
        div
            input#inputPassword(type = 'password', placeholder = 'Enter Password', name = 'password', value = '#{password}')
        div
            input#inputEmail(type = 'text', placeholder = 'Enter Email', name = 'email', value = '#{email}')
        div
            input#inputFullName(type = 'text', placeholder = 'Enter Full Name', name = 'fullname', value = '#{name}')
        div
            button#btnSubmit(type='submit') Submit
             
             
             
            